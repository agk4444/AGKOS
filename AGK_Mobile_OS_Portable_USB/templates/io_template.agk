        create choice as String
        set choice to io.read_line()

        if choice == "1":
            basic_console_demo(logger)
        else if choice == "2":
            formatted_output_demo(logger)
        else if choice == "3":
            file_operations_demo(logger)
        else if choice == "4":
            input_validation_demo(logger)
        else if choice == "5":
